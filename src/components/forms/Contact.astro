---
import Title from "@components/global/Title.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

// Nota: Reemplaza "TU_ID_FORMSPREE" con el ID que te da Formspree.io
// O simplemente usa "https://formspree.io/f/vanttastudio@gmail.com" (aunque requiere verificación previa en su web)
const FORM_ACTION = "https://formspree.io/f/vanttastudio@gmail.com";
---

<section class="relative isolate overflow-hidden bg-zinc-950 px-6 py-24 sm:py-32 lg:px-8">
    <div class="absolute inset-x-0 top-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]" aria-hidden="true">
        <div class="gradient-element"></div>
    </div>

    <div class="mx-auto max-w-5xl">
        <Title 
            class="pb-10 pt-20 uppercase text-white" 
            title={t("contact.title") || "Hablemos"} 
            subtitle={t("contact.subtitle") || "Cuéntanos sobre tu próximo proyecto"} 
        />
        
        <form 
            action={FORM_ACTION}
            method="POST"
            class="mx-auto max-w-2xl pt-12 lg:pt-20"
        >
            <input type="text" name="_gotcha" style="display:none" />

            <div class="grid grid-cols-1 gap-x-8 gap-y-12 sm:grid-cols-2">
                
                <div class="form-field sm:col-span-2">
                    <label for="name" class="form-label">{t("contact.name")}*</label>
                    <input type="text" name="name" id="name" required placeholder="Nombre Completo" />
                </div>

                <div class="form-field sm:col-span-2">
                    <label for="email" class="form-label">{t("contact.email")}*</label>
                    <input type="email" name="email" id="email" required placeholder="tu@email.com" />
                </div>

                <div class="form-field sm:col-span-2">
                    <label for="company" class="form-label">{t("contact.company")}</label>
                    <input type="text" name="company" id="company" placeholder="Empresa / Marca" />
                </div>

                <div class="form-field sm:col-span-2">
                    <label for="message" class="form-label">{t("contact.message")}*</label>
                    <textarea name="message" id="message" rows="1" required placeholder={t("contact.placeholder") || "¿En qué podemos ayudarte?"}></textarea>
                </div>

                <div class="flex items-start gap-x-4 sm:col-span-2">
                    <div class="flex h-6 items-center">
                        <input type="checkbox" id="privacy" required class="h-4 w-4 rounded border-zinc-700 bg-zinc-800 text-lime-400 focus:ring-lime-500" />
                    </div>
                    <label class="text-sm leading-6 text-zinc-500" for="privacy">
                        {t("contact.agree") || "Acepto la"}
                        <a href={translatePath("/privacy")} class="font-bold text-white hover:text-lime-400 transition-colors">
                            política de privacidad
                        </a>.
                    </label>
                </div>
            </div>

            <div class="flex pt-16">
                <button
                    type="submit"
                    class="group relative flex h-16 w-full items-center justify-center overflow-hidden rounded-full bg-lime-400 px-10 py-4 text-xl font-black uppercase tracking-tighter text-black transition-all hover:bg-white sm:w-auto"
                    data-cursor-hover
                >
                    <span class="relative z-10">{t("contact.send") || "Enviar Mensaje"}</span>
                    <div class="absolute inset-0 z-0 h-full w-full translate-y-full bg-white transition-transform duration-300 group-hover:translate-y-0"></div>
                </button>
            </div>
        </form>
    </div>
</section>

<style>
    .gradient-element {
        @apply relative left-1/2 -z-10 aspect-[1155/678] w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#a3e635] to-[#166534] opacity-10 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem];
        clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%);
    }

    .form-field {
        @apply flex flex-col gap-1;
    }

    .form-label {
        @apply text-[10px] font-black uppercase tracking-[0.2em] text-zinc-500 ml-1;
    }

    input[type="text"],
    input[type="email"],
    textarea {
        @apply w-full border-b border-zinc-800 bg-transparent px-2 py-4 text-2xl font-bold text-white outline-none transition-all placeholder:text-zinc-800 focus:border-lime-400 focus:placeholder:text-zinc-700;
        /* Quitamos bordes redondeados por defecto para un look más arquitectónico */
        border-radius: 0;
    }

    /* Auto-expandir el textarea sutilmente */
    textarea {
        min-height: 80px;
        resize: none;
    }

    /* Estética del Checkbox */
    input[type="checkbox"] {
        @apply appearance-none border border-zinc-700 bg-zinc-900 checked:bg-lime-400 checked:border-lime-400 transition-all cursor-pointer;
    }
</style>

<script>
    // Pequeño script para que el textarea crezca según escribes
    const textareas = document.querySelectorAll('textarea');
    textareas.forEach(textarea => {
        textarea.addEventListener('input', () => {
            textarea.style.height = 'auto';
            textarea.style.height = textarea.scrollHeight + 'px';
        });
    });
</script>