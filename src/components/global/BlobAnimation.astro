---
/* AnimatedBlobs.astro - Blobs dinámicos con paleta configurable */
interface Props {
    blobAColor?: string;
    blobBColor?: string;
    blobCColor?: string;
}

const {
    blobAColor = "#a3e635", // Lima principal
    blobBColor = "#166534", // Verde bosque
    blobCColor = "#3f3f46", // Zinc
} = Astro.props;
---

<div class="blob-cont">
    <div class="blob blob-color-a"></div>
    <div class="blob blob-color-c"></div>
    <div class="blob blob-color-b"></div>
</div>

<style define:vars={{ blobAColor, blobBColor, blobCColor }}>
    .blob-cont {
        position: absolute;
        inset: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: -2;
        overflow: hidden;
        pointer-events: none;
        background-color: transparent;
    }

    .blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.25; /* Un poco más sutil para dejar leer el texto */
        will-change: transform;
        pointer-events: none;
    }

    .blob-color-a {
        background-color: var(--blobAColor);
        width: 45vw;
        height: 45vw;
        top: -10%;
        left: -10%;
        animation: movement-a 25s infinite ease-in-out;
    }

    .blob-color-b {
        background-color: var(--blobBColor);
        width: 55vw;
        height: 55vw;
        bottom: -15%;
        right: -10%;
        animation: movement-b 30s infinite ease-in-out;
    }

    .blob-color-c {
        background-color: var(--blobCColor);
        width: 35vw;
        height: 35vw;
        top: 30%;
        left: 20%;
        animation: movement-c 20s infinite ease-in-out;
    }

    /* Animaciones optimizadas usando solo transform */
    @keyframes movement-a {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30vw, 15vh) scale(1.1);
        }
        66% {
            transform: translate(10vw, 40vh) scale(0.9);
        }
    }

    @keyframes movement-b {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }
        50% {
            transform: translate(-25vw, -20vh) scale(1.2);
        }
    }

    @keyframes movement-c {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }
        40% {
            transform: translate(20vw, -10vh) scale(1.3);
        }
        80% {
            transform: translate(-10vw, 25vh) scale(0.85);
        }
    }
</style>