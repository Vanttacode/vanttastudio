---
import { Github, Instagram, ArrowUpRight, MapPin } from "lucide-react";

const year = new Date().getFullYear();

const links = {
  servicios: [
    { label: "Web Workover", href: "/workover" },
    { label: "Web Modular", href: "/cotizador" },
    { label: "Labs (Experimentos)", href: "/labs" },
  ],
  comunidad: [
    { label: "Academy", href: "https://academy.vanttacode.cl/" },
    { label: "Github", href: "https://github.com/Vanttacode" },
    { label: "Instagram", href: "https://www.instagram.com/nikvantta/" },
  ],
  legal: [
    { label: "Términos y Condiciones", href: "/legal/terminos" },
    { label: "Privacidad", href: "/legal/privacidad" },
  ]
};
---

<footer class="bg-black text-white border-t border-white/10 relative overflow-hidden pt-20 pb-10">
  
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 mb-20">
      
      <div class="md:col-span-4 flex flex-col justify-between">
        <div>
          <img src="/logoblanco.png" alt="VanttaCode" class="h-8 w-auto mb-6 opacity-90" />
          <p class="text-gray-400 text-sm leading-relaxed max-w-sm mb-6">
            Infraestructura digital de alto rendimiento. 
            Sin plantillas rotas, sin humo y sin letra chica.
            Construimos sistemas que funcionan.
          </p>
          
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-white/10 bg-white/5 text-xs font-mono text-gray-300">
            <MapPin size={12} class="text-purple-400" />
            <span>Punta Arenas, Chile</span>
          </div>
        </div>
      </div>

      <div class="md:col-span-3">
        <h4 class="text-xs font-bold uppercase tracking-widest text-gray-500 mb-6">Servicios</h4>
        <ul class="space-y-4">
          {links.servicios.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors text-sm font-medium flex items-center gap-2 group">
                {link.label}
                <span class="opacity-0 group-hover:opacity-100 transition-opacity text-purple-400">→</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="md:col-span-3">
        <h4 class="text-xs font-bold uppercase tracking-widest text-gray-500 mb-6">Ecosistema</h4>
        <ul class="space-y-4">
          {links.comunidad.map((link) => (
            <li>
              <a href={link.href} target="_blank" class="text-gray-300 hover:text-white transition-colors text-sm font-medium flex items-center gap-2 group">
                {link.label}
                <ArrowUpRight size={14} class="opacity-30 group-hover:opacity-100 transition-opacity" />
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="md:col-span-2">
        <h4 class="text-xs font-bold uppercase tracking-widest text-gray-500 mb-6">Estado</h4>
        <div class="flex items-center gap-3">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          <span class="text-sm font-mono text-green-400">Operativo</span>
        </div>
        <div class="mt-4 text-[10px] text-gray-600 font-mono">
          v2.5.0-stable
        </div>
      </div>

    </div>

    <div class="h-px w-full bg-white/10 mb-10"></div>

    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-xs text-gray-500">
        &copy; {year} Vantta SpA @ Todos los derechos reservados.
      </div>
      
      <div class="flex gap-6">
        {links.legal.map((link) => (
          <a href={link.href} class="text-xs text-gray-500 hover:text-gray-300 transition-colors">
            {link.label}
          </a>
        ))}
      </div>
    </div>

    <div class="absolute -bottom-4 left-0 w-full overflow-hidden pointer-events-none opacity-10 select-none">
      <h1 class="text-[15vw] leading-[0.8] font-black text-transparent bg-clip-text bg-gradient-to-t from-white to-transparent text-center tracking-tighter">
        VANTTA
      </h1>
    </div>

  </div>
  
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[800px] h-[300px] bg-purple-900/20 blur-[120px] pointer-events-none"></div>

</footer>