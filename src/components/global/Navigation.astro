---
// 1. IMPORTACIÓN USANDO TU ALIAS CONFIGURADO EN TSCONFIG
import logovanta from "@/assets/images/logovanta.png";
import { Image } from "astro:assets";

const pages = [
    { title: "Inicio", url: "/" },
    { title: "Portafolio", url: "/work/" },
    { title: "Labs", url: "/blog/" },
    { title: "Contacto", url: "/contact/" },
];

const { pathname } = Astro.url;
---

<header class="relative z-[100]">
    <a href="/" aria-label="Home" class="logo absolute left-0 top-0 z-[110] flex h-[4.5rem] items-center px-8 md:h-[5.9rem]">
        <div id="logo-container" class="opacity-0">
            <Image 
                src={logovanta} 
                alt="Logo Vanta" 
                class="h-7 w-auto md:h-10 object-contain"
                loading="eager"
                format="webp"
            />
        </div>
    </a>

    <div x-data="{ open: false }" class="navigation fixed right-0 top-0 z-[100] p-6" :class="{'w-full h-screen bg-zinc-950/95 backdrop-blur-2xl': open}">
        <div class="ml-auto transition-all duration-500 md:max-w-fit" :class="open ? 'max-w-full' : 'max-w-[12rem]'">
            <div class="nav-container group relative overflow-hidden rounded-3xl border border-zinc-800 bg-zinc-900/80 backdrop-blur-md transition-all duration-500 shadow-2xl">
                
                <div class="flex items-center justify-end p-3 md:hidden">
                    <button @click="open = !open" class="flex h-10 w-10 items-center justify-center rounded-full bg-zinc-800 text-white transition-transform" :class="{'rotate-90': open}">
                        <svg x-show="!open" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        <svg x-show="open" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                    </button>
                </div>

                <nav :class="open ? 'flex' : 'hidden'" class="flex-col p-8 md:flex md:flex-row md:items-center md:p-2">
                    <ul class="flex list-none flex-col gap-4 md:flex-row md:items-center md:gap-1">
                        {pages.map((page) => {
                            const isActive = pathname === page.url;
                            return (
                                <li data-cursor-hover>
                                    <a href={page.url} class={`group relative block rounded-full px-6 py-3 transition-all md:px-4 md:py-2 ${isActive ? 'bg-zinc-800' : 'hover:bg-lime-400'}`}>
                                        <span class={`text-2xl font-bold uppercase tracking-widest transition-colors md:text-[10px] ${isActive ? 'text-lime-400' : 'text-zinc-400 group-hover:text-black'}`}>
                                            {page.title}
                                        </span>
                                    </a>
                                </li>
                            );
                        })}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>

<style is:global>
    /* El modo difference permite que el logo blanco destaque en fondos oscuros */
    .logo { mix-blend-mode: difference; }
    
    #logo-container {
        display: flex;
        align-items: center;
    }
</style>

<script>
    import { gsap } from "gsap";

    function initLogo() {
        const container = document.querySelector("#logo-container");
        if (!container) return;

        // APARICIÓN SUAVE DE 3 SEGUNDOS
        gsap.to(container, {
            opacity: 1,
            duration: 3,
            ease: "power2.inOut",
            overwrite: "auto"
        });
    }

    // Ejecutar en cada carga de página (soporta View Transitions)
    document.addEventListener("astro:page-load", initLogo);
    // Ejecutar inmediatamente por seguridad
    initLogo();
</script>