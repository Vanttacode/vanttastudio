---
/* TextureOverlay.astro
  Capa de ruido sutil que unifica visualmente todos los componentes.
*/
---

<div class="texture-overlay"></div>

<style>
    .texture-overlay {
        position: fixed;
        top: -50%;
        left: -50%;
        right: -50%;
        bottom: -50%;
        width: 200%;
        height: 200%;
        pointer-events: none;
        z-index: 9999;
        /* Opacidad perfecta para que sea sutil pero perceptible */
        opacity: 0.04; 
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        
        /* Animación activa para dar sensación de film analógico */
        animation: noise 0.2s steps(2) infinite;
    }

    @keyframes noise {
        0% { transform: translate(0,0); }
        10% { transform: translate(-5%,-5%); }
        20% { transform: translate(-10%,5%); }
        30% { transform: translate(5%,-10%); }
        40% { transform: translate(-5%,15%); }
        50% { transform: translate(-10%,5%); }
        60% { transform: translate(15%,0); }
        70% { transform: translate(0,10%); }
        80% { transform: translate(-15%,0); }
        90% { transform: translate(10%,5%); }
        100% { transform: translate(5%,0); }
    }

    /* Reducir movimiento si el usuario prefiere menos animaciones (Accesibilidad) */
    @media (prefers-reduced-motion: reduce) {
        .texture-overlay {
            animation: none;
            opacity: 0.02;
        }
    }
</style>