---
import { Github, Instagram, ArrowUpRight, MessageCircle, Terminal } from "lucide-react";

const items = [
  {
    id: "academy",
    label: "Vantta Academy",
    desc: "Formación técnica de alto nivel. Taller Gamer (Niños) activo.",
    href: "https://academy.vanttacode.cl/",
    icon: Terminal,
    // Colores intensos (Green)
    text: "text-green-400 group-hover:text-green-300",
    borderHover: "group-hover:border-green-500",
    bgHover: "group-hover:from-green-900/20 group-hover:to-transparent",
    iconBox: "bg-green-500/10 text-green-400 border-green-500/20 group-hover:bg-green-500 group-hover:text-black group-hover:shadow-[0_0_20px_rgba(34,197,94,0.4)]",
    badge: "bg-green-500/10 text-green-400 border-green-500/20",
    status: "Inscripciones Abiertas"
  },
  {
    id: "threads",
    label: "Threads",
    desc: "Opinión cruda sobre industria tech y negocios.",
    href: "https://www.threads.com/@nikvantta",
    icon: MessageCircle,
    // Colores intensos (Red)
    text: "text-red-400 group-hover:text-red-300",
    borderHover: "group-hover:border-red-500",
    bgHover: "group-hover:from-red-900/20 group-hover:to-transparent",
    iconBox: "bg-red-500/10 text-red-400 border-red-500/20 group-hover:bg-red-500 group-hover:text-white group-hover:shadow-[0_0_20px_rgba(239,68,68,0.4)]",
    badge: "bg-red-500/10 text-red-400 border-red-500/20",
    status: "Daily"
  },
  {
    id: "instagram",
    label: "Instagram",
    desc: "Build in public. El detrás de escena visual.",
    href: "https://www.instagram.com/nikvantta/",
    icon: Instagram,
    // Colores intensos (Pink)
    text: "text-pink-400 group-hover:text-pink-300",
    borderHover: "group-hover:border-pink-500",
    bgHover: "group-hover:from-pink-900/20 group-hover:to-transparent",
    iconBox: "bg-pink-500/10 text-pink-400 border-pink-500/20 group-hover:bg-pink-500 group-hover:text-white group-hover:shadow-[0_0_20px_rgba(236,72,153,0.4)]",
    badge: "bg-pink-500/10 text-pink-400 border-pink-500/20",
    status: "Visual Log"
  },
  {
    id: "github",
    label: "GitHub / Open Source",
    desc: "Código real. Aportes a la comunidad y repositorios públicos.",
    href: "https://github.com/Vanttacode",
    icon: Github,
    // Colores intensos (Cyan)
    text: "text-cyan-400 group-hover:text-cyan-300",
    borderHover: "group-hover:border-cyan-500",
    bgHover: "group-hover:from-cyan-900/20 group-hover:to-transparent",
    iconBox: "bg-cyan-500/10 text-cyan-400 border-cyan-500/20 group-hover:bg-cyan-500 group-hover:text-black group-hover:shadow-[0_0_20px_rgba(6,182,212,0.4)]",
    badge: "bg-cyan-500/10 text-cyan-400 border-cyan-500/20",
    status: "Contributor"
  }
];
---

<section class="py-24 bg-black text-white relative overflow-hidden" id="comunidad">
  
  <div class="max-w-5xl mx-auto px-6 relative z-10">
    
    <div class="mb-12 flex items-end justify-between border-b border-white/10 pb-6">
      <div>
        <h2 class="text-3xl font-bold uppercase tracking-tight mb-2 text-white">
          Comunidad <span class="text-gray-600">_ Index</span>
        </h2>
        <p class="text-gray-400 text-sm">
          Conexión directa a través de nuestros canales oficiales.
        </p>
      </div>
      <div class="hidden md:flex gap-4 text-[10px] font-mono text-gray-600 uppercase tracking-widest">
        <span class="flex items-center gap-2"><span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span> ONLINE</span>
      </div>
    </div>

    <div class="flex flex-col gap-2">
      
      {items.map((item) => (
        <a 
          href={item.href} 
          target="_blank" 
          class={`group relative flex flex-col md:flex-row items-start md:items-center justify-between p-6 rounded-2xl border border-white/5 bg-[#080808] overflow-hidden transition-all duration-300 hover:border-white/20 hover:-translate-y-1 hover:shadow-xl`}
        >
          
          <div class={`absolute inset-0 bg-gradient-to-r ${item.bgHover} opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none`}></div>

          <div class={`absolute bottom-0 left-0 w-full h-[2px] scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left ${item.borderHover.replace('border', 'bg')}`}></div>

          <div class="flex items-center gap-6 mb-4 md:mb-0 relative z-10">
            
            {/* ICONO GRANDE Y BRILLANTE */}
            <div class={`w-14 h-14 flex items-center justify-center rounded-xl border transition-all duration-300 ${item.iconBox}`}>
              <item.icon size={28} />
            </div>
            
            <div>
              <div class="flex items-center gap-3 mb-1">
                <h3 class={`text-xl font-black uppercase tracking-tight transition-colors text-white group-hover:text-white`}>
                  {item.label}
                </h3>
                {/* BADGE DE ESTADO */}
                <span class={`text-[10px] font-bold px-2 py-0.5 rounded uppercase tracking-wider border ${item.badge}`}>
                  {item.status}
                </span>
              </div>
              <p class="text-sm text-gray-500 group-hover:text-gray-300 transition-colors max-w-md font-medium">
                {item.desc}
              </p>
            </div>
          </div>

          <div class="flex items-center gap-8 w-full md:w-auto justify-between md:justify-end relative z-10">
            
            {/* Si es GitHub, mostramos un mini gráfico simulado más brillante */}
            {item.id === 'github' && (
              <div class="hidden md:flex gap-1 opacity-50 group-hover:opacity-100 transition-opacity">
                 {Array.from({ length: 12 }).map(() => (
                   <div class={`w-3 h-3 rounded-sm ${Math.random() > 0.5 ? 'bg-cyan-400 shadow-[0_0_5px_rgba(34,211,238,0.8)]' : 'bg-white/10'}`}></div>
                 ))}
              </div>
            )}

            <div class={`p-2 rounded-full border border-white/10 text-gray-500 transition-all duration-300 group-hover:bg-white group-hover:text-black group-hover:border-white group-hover:scale-110`}>
              <ArrowUpRight size={20} />
            </div>
          </div>

        </a>
      ))}

    </div>

  </div>
</section>