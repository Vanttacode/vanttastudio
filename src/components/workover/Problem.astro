---
import { Gauge, Code2, Cpu } from "lucide-react";

const features = [
  {
    icon: Gauge,
    title: "Lenta y Pesada",
    desc: "Tarda siglos en cargar. Los clientes se van antes de ver tu logo."
  },
  {
    icon: Code2,
    title: "Código Basura",
    desc: "Lleno de plugins innecesarios que rompen la web cada vez que actualizas."
  },
  {
    icon: Cpu,
    title: "Tecnología Vieja",
    desc: "WordPress o Wix ya no dan abasto para lo que tu negocio necesita hoy."
  }
];
---
<section class="py-20 px-6 border-y border-white/5 bg-[#050505]">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
    {features.map(f => (
      <div class="p-8 rounded-2xl bg-black border border-white/10 hover:border-purple-500/30 transition-colors group">
        <div class="w-12 h-12 rounded-lg bg-purple-900/20 flex items-center justify-center text-purple-400 mb-6 group-hover:scale-110 transition-transform">
          <f.icon size={24} />
        </div>
        <h3 class="text-xl font-bold mb-3">{f.title}</h3>
        <p class="text-gray-400 text-sm leading-relaxed">{f.desc}</p>
      </div>
    ))}
  </div>
</section>