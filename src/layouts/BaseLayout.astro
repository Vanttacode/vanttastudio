---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import ThemeInit from "../components/ui/ThemeInit.astro";

// IMPORTANTE: Cambiamos la importación.
// En lugar de "Navbar.astro" (el viejo), traemos "barnav.astro" (el wrapper de React).
import Barnav from "../components/ui/Navbar.astro";

type Props = {
  title?: string;
  lang?: string;
};

const { title = "VanttaCode", lang = "es" } = Astro.props as Props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    
    <ThemeInit />
  </head>

  <body>
    <Barnav />
    
    <main>
      <slot />
    </main>
  </body>
</html>