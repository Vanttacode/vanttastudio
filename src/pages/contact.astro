---
import Contact from "@/components/forms/Contact.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";

// Importaciones de tus componentes visuales exactos
import TextureOverlay from "@components/global/TextureOverlay.astro";
import CursorFollower from "@components/global/CursorFollower.astro";
import GrainyGradient from "@components/global/GrainyGradient.astro";
import AnimatedBlobs from "@components/global/BlobAnimation.astro";

const seo: AstroSeoProps = {
    title: "Contacto | Vantta Studio — Diseño y Desarrollo de Alto Impacto",
    description:
        "Ponte en contacto con Vantta Studio para servicios expertos de diseño web, desarrollo y estrategia digital. Hablemos sobre tu próximo proyecto innovador.",
    canonical: "https://vanttastudio.cl/contact/",
    openGraph: {
        title: "Contacta con Vantta Studio",
        description: "Iniciemos una conversación sobre tu presencia digital y cómo elevar tu marca.",
        type: "website",
    }
};
---

<BaseLayout seo={seo}>
    <main class="bg-zinc-950 min-h-screen relative overflow-hidden pt-20">
        
        <AnimatedBlobs />
        <GrainyGradient />
        <TextureOverlay />
        <CursorFollower />

        <div class="relative z-10">
            <Contact />
        </div>

    </main>
</BaseLayout>

<style is:global>
    /* Animación de entrada suave para la sección de contacto */
    main {
        animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn {
        from { 
            opacity: 0; 
            transform: translateY(10px); 
        }
        to { 
            opacity: 1; 
            transform: translateY(0); 
        }
    }

    /* Estilo para los títulos del formulario para que sean consistentes con Vantta */
    h1, h2, label {
        font-weight: 800;
        letter-spacing: -0.01em;
    }
</style>