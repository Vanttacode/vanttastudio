---
import BaseLayout from "@/layouts/BaseLayout.astro";

// Componentes Globales
import GrainyGradient from "@components/global/GrainyGradient.astro";

// Componentes de la Landing
import Hero from "@components/landing/Hero.astro";
import WorkPreview from "@components/landing/WorkPreview.astro"; // Grilla de Proyectos
import Services from "@components/landing/Services.astro";
import Tagline from "@components/landing/Tagline.astro"; // "Convertimos la complejidad..."
import AllInOne from "@components/landing/AllInOne.astro"; // Los 3 puntos clave
import Testimonials from "@components/landing/Testimonials.astro"; // Casos de Ã©xito
import Faq from "@components/landing/Faq.astro";
import Cta from "@components/landing/Cta.astro"; 
---

<BaseLayout>
  <main class="relative bg-zinc-950">
    <div class="relative min-h-screen overflow-hidden border-b border-zinc-900">
      <GrainyGradient class="absolute inset-0 opacity-40" />
      <Hero />
    </div>

    <div class="relative z-20 bg-zinc-950">
      <WorkPreview class="!pt-20 pb-20 lg:!pt-36 lg:pb-40" />
    </div>

    <section class="relative z-10 bg-zinc-950">
      <Services />
    </section>

    <AllInOne />

    <Testimonials />

    <Tagline />

    <section class="relative z-10 bg-zinc-950 py-20">
      <Faq />
    </section>

    <Cta />
  </main>
</BaseLayout>

<style is:global>
  html {
    scroll-behavior: smooth;
    background-color: #09090b;
  }

  ::selection {
    background-color: #a3e635;
    color: #000;
  }

  body {
    overflow-x: hidden;
  }

  main {
    position: relative;
    width: 100%;
  }

  /* Utilidades de bordes */
  .rounded-4xl { border-radius: 2.5rem; }
  .rounded-5xl { border-radius: 3.5rem; }
  .rounded-6xl { border-radius: 4.5rem; }
</style>