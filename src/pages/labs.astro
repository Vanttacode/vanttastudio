---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/global/Footer.astro";
import { 
  GraduationCap, 
  MapPin, 
  Building2, 
  Video, 
  Bot, 
  Sparkles,
  ArrowUpRight
} from "lucide-react";

const projects = [
  {
    title: "Vantta Academy",
    desc: "Formando la próxima generación de ingenieros.",
    icon: GraduationCap,
    color: "from-blue-600/20 to-blue-400/20",
    size: "lg:col-span-2 lg:row-span-2", // Tarjeta Grande
    tag: "Educación",
    isSoon: true // Próximamente
  },
  {
    title: "UbikApp",
    desc: "Geolocalización inteligente en tiempo real.",
    icon: MapPin,
    color: "from-orange-600/20 to-orange-400/20",
    size: "lg:col-span-1 lg:row-span-1",
    tag: "SaaS",
    link: "https://ubikapp.cl/", // Enlace externo
    external: true
  },
  {
    title: "UbiCorp",
    desc: "Gestión de activos para empresas.",
    icon: Building2,
    color: "from-emerald-600/20 to-emerald-400/20",
    size: "lg:col-span-1 lg:row-span-1",
    tag: "Enterprise",
    isSoon: true // Próximamente
  },
  {
    title: "Vantta Productions",
    desc: "Contenido audiovisual de alto impacto.",
    icon: Video,
    color: "from-purple-600/20 to-purple-400/20",
    size: "lg:col-span-1 lg:row-span-2", // Tarjeta Vertical
    tag: "Media",
    isSoon: true // Próximamente
  },
  {
    title: "VanttaRig", // Reemplaza a AI Agents
    desc: "Sistemas operativos autónomos que trabajan por ti.",
    icon: Bot,
    color: "from-red-600/20 to-red-400/20",
    size: "lg:col-span-2 lg:row-span-1", // Tarjeta Horizontal
    tag: "R&D",
    highlight: true,
    link: "/vanttarig" // Enlace interno
  },
  {
    title: "Próximamente",
    desc: "Nuevas ideas cocinándose en el sótano.",
    icon: Sparkles,
    color: "from-gray-800 to-gray-900",
    size: "lg:col-span-1 lg:row-span-1",
    tag: "Secret",
    isSoon: true
  }
];
---

<BaseLayout title="Vantta Lab | El sótano de la innovación">
  
  <main class="bg-black min-h-screen pt-32 pb-20 px-6">
    <div class="max-w-7xl mx-auto">
      
      <div class="mb-16">
        <span class="text-[10px] font-bold text-purple-500 uppercase tracking-[0.3em]">Experimental</span>
        <h1 class="text-5xl md:text-7xl font-black text-white uppercase mt-4 mb-6">
          Vantta <span class="text-transparent bg-clip-text bg-gradient-to-r from-gray-400 to-white">Lab</span>
        </h1>
        <p class="text-gray-400 max-w-xl text-lg">
          Proyectos internos, experimentos de IA y nuevas unidades de negocio. Lo que estamos construyendo hoy para el mañana.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 auto-rows-[220px]">
        {projects.map((p) => {
          // Determinar el elemento contenedor: 'a' si tiene link, 'div' si no
          const Tag = p.link ? 'a' : 'div';
          const href = p.link || undefined;
          const target = p.external ? "_blank" : undefined;
          const rel = p.external ? "noopener noreferrer" : undefined;

          return (
            <Tag 
              href={href}
              target={target}
              rel={rel}
              class={`group relative rounded-[2.5rem] overflow-hidden border border-white/5 bg-[#0a0a0a] transition-all duration-500 hover:border-white/20 hover:shadow-2xl hover:shadow-purple-900/10 ${p.size} flex flex-col justify-between cursor-pointer`}
            >
              
              <div class={`absolute inset-0 bg-gradient-to-br ${p.color} opacity-20 group-hover:opacity-40 transition-opacity`}></div>
              
              <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5 mix-blend-overlay"></div>

              <div class="relative h-full p-8 flex flex-col justify-between z-10 w-full">
                <div class="flex justify-between items-start w-full">
                  <div class="p-4 rounded-2xl bg-black/40 backdrop-blur-md border border-white/10 group-hover:scale-110 transition-transform duration-500">
                    <p.icon size={28} class="text-white" />
                  </div>
                  {!p.isSoon && <ArrowUpRight size={20} class="text-gray-600 group-hover:text-white transition-colors" />}
                </div>

                <div>
                  <div class="flex items-center gap-2 mb-2">
                    <span class="text-[9px] font-bold uppercase tracking-widest text-gray-500 block">
                      {p.tag}
                    </span>
                    {p.isSoon && (
                      <span class="px-2 py-0.5 rounded-full bg-white/10 border border-white/10 text-[8px] font-bold text-gray-400 uppercase tracking-wider">
                        Próximamente
                      </span>
                    )}
                  </div>
                  
                  <h2 class={`text-2xl font-black text-white uppercase leading-tight ${p.highlight ? 'md:text-4xl' : ''}`}>
                    {p.title}
                  </h2>
                  <p class="text-gray-400 text-sm mt-2 max-w-[200px] leading-snug">
                    {p.desc}
                  </p>
                </div>
              </div>

              {/* Efecto de luz al pasar el mouse */}
              {!p.isSoon && (
                <div class="absolute -inset-full bg-gradient-to-r from-transparent via-white/5 to-transparent skew-x-[-20deg] group-hover:animate-[shimmer_2s_infinite] pointer-events-none"></div>
              )}
            </Tag>
          );
        })}
      </div>

      <div class="mt-20 text-center py-20 border-t border-white/5">
        <p class="text-xs font-mono text-gray-600 uppercase tracking-widest">
          No todos los experimentos sobreviven. Disfruta los que sí.
        </p>
      </div>
    </div>
  </main>

  <Footer />

</BaseLayout>

<style>
  @keyframes shimmer {
    100% {
      left: 100%;
    }
  }
</style>