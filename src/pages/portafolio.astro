---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/global/Footer.astro";
import { 
  ExternalLink, 
  Code2, 
  BrainCircuit, 
  Globe,
  ArrowRight
} from "lucide-react";

// TUS 4 EJEMPLOS CARGADOS
const projects = [
  {
    title: "EcoSmart Dashboard",
    client: "Enel X",
    category: "Software",
    desc: "Plataforma de monitoreo energético en tiempo real con predicción de consumo mediante IA.",
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&q=80&w=1000",
    icon: Code2,
    color: "group-hover:text-blue-400"
  },
  {
    title: "Luxury Real Estate",
    client: "Altos del Sur",
    category: "Web",
    desc: "Experiencia web inmersiva para corretaje de propiedades de lujo con tours 3D integrados.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&q=80&w=1000",
    icon: Globe,
    color: "group-hover:text-green-400"
  },
  {
    title: "Predictor de Demanda",
    client: "Retail Corp",
    category: "IA",
    desc: "Agente autónomo que analiza tendencias globales para optimizar el inventario logístico.",
    image: "https://images.unsplash.com/photo-1677442136019-21780ecad995?auto=format&fit=crop&q=80&w=1000",
    icon: BrainCircuit,
    color: "group-hover:text-purple-400"
  },
  {
    title: "Vantta Commerce",
    client: "Propio",
    category: "Web",
    desc: "E-commerce modular de alto rendimiento con carga instantánea y SEO quirúrgico.",
    image: "https://images.unsplash.com/photo-1557821552-17105176677c?auto=format&fit=crop&q=80&w=1000",
    icon: Globe,
    color: "group-hover:text-cyan-400"
  }
];
---

<BaseLayout title="Portafolio | VanttaCode">
  
  <main class="bg-black min-h-screen pt-20">
    
    <div class="px-8 py-16 md:py-24 border-b border-white/10">
      <span class="text-[10px] font-bold text-gray-500 uppercase tracking-[0.4em]">Archive_System // 2026</span>
      <h1 class="text-6xl md:text-8xl font-black text-white uppercase mt-4 tracking-tighter">
        PORTAFOLIO<span class="opacity-20">_</span>
      </h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 w-full border-b border-white/10">
      {projects.map((p) => (
        <a href="#" class="group relative aspect-square overflow-hidden border-r border-b border-white/10 flex flex-col justify-end">
          
          <div class="absolute inset-0 z-0">
            <img 
              src={p.image} 
              alt={p.title} 
              class="w-full h-full object-cover grayscale brightness-[0.3] group-hover:grayscale-0 group-hover:brightness-100 group-hover:scale-110 transition-all duration-700 ease-in-out"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent opacity-80 group-hover:opacity-40 transition-opacity duration-500"></div>
          </div>

          <div class="relative z-10 p-8 md:p-12 transition-transform duration-500 group-hover:-translate-y-2">
            
            <div class="flex items-center gap-3 mb-4">
              <div class={`p-3 bg-black/60 backdrop-blur-xl border border-white/10 rounded-xl transition-colors duration-300 ${p.color}`}>
                <p.icon size={24} />
              </div>
              <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">{p.category}</span>
            </div>

            <span class="text-[10px] font-bold text-gray-500 uppercase tracking-widest block mb-2">{p.client}</span>
            <h2 class="text-4xl md:text-5xl font-black text-white uppercase leading-none mb-6">
              {p.title}
            </h2>

            <p class="text-gray-400 text-sm md:text-base max-w-sm line-clamp-2 group-hover:line-clamp-none transition-all duration-500">
              {p.desc}
            </p>

            <div class="mt-8 flex items-center gap-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                <div class="h-[1px] flex-1 bg-white/20 relative overflow-hidden">
                    <div class="absolute inset-0 bg-white translate-x-[-100%] group-hover:translate-x-0 transition-transform duration-700 delay-100"></div>
                </div>
                <ExternalLink size={20} className="text-white" />
            </div>
          </div>

          <div class="absolute top-0 right-0 p-8 opacity-0 group-hover:opacity-100 transition-opacity">
             <ArrowRight size={32} className="text-white -rotate-45" />
          </div>
        </a>
      ))}
    </div>

    <div class="w-full py-32 px-8 flex flex-col items-center text-center bg-[#050505]">
        <h3 class="text-4xl md:text-6xl font-black text-white uppercase mb-8">
            ¿TU PROYECTO ES EL <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-cyan-400">SIGUIENTE?</span>
        </h3>
        <a href="/cotizador" class="group flex items-center gap-4 px-10 py-5 bg-white text-black font-black uppercase text-sm rounded-full hover:scale-105 transition-all">
            Iniciar Configuración <ArrowRight size={20} className="group-hover:translate-x-2 transition-transform" />
        </a>
    </div>

  </main>

  <Footer />

</BaseLayout>