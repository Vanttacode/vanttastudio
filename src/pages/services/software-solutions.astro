---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import Title from "@components/global/Title.astro";
import Cta from "@components/landing/Cta.astro";

// Componentes visuales de fondo
import TextureOverlay from "@components/global/TextureOverlay.astro";
import CursorFollower from "@components/global/CursorFollower.astro";
import GrainyGradient from "@components/global/GrainyGradient.astro";
import AnimatedBlobs from "@components/global/BlobAnimation.astro";

const seo: AstroSeoProps = {
    title: "Software a Medida | Vantta Studio",
    description: "Desarrollo de software industrial con Python. CRM, ERP, Automatización y Sistemas de Inteligencia de Datos.",
};

const softwareSolutions = [
    { title: "CRM Custom", price: "$850.000", desc: "Gestión de relaciones diseñada para tu embudo de ventas único.", features: ["Pipeline Visual", "Automatización de Leads", "Integración WhatsApp"] },
    { title: "ERP Industrial", price: "Cotizar", desc: "Control total de recursos, stock y finanzas en una sola suite.", features: ["Módulos Contables", "Gestión de Inventario", "Reportes en Tiempo Real"] },
    { title: "Bots de Trading", price: "$600.000", desc: "Algoritmos ejecutados en Python para mercados financieros.", features: ["Análisis Técnico Auto", "Conexión API Exchange", "Gestión de Riesgo"] },
    { title: "Sistemas de Turnos", price: "$450.000", desc: "Optimización de agendas complejas para clínicas o servicios.", features: ["Sincronización Cloud", "Recordatorios SMS/Mail", "Panel de Profesionales"] },
    { title: "Data Scraping", price: "$300.000", desc: "Extracción automatizada de datos para inteligencia de mercado.", features: ["Minería de Datos", "Exportación a SQL/Excel", "Monitoreo de Precios"] },
    { title: "Software Logístico", price: "$750.000", desc: "Control de flotas y optimización de rutas de entrega.", features: ["Tracking en Vivo", "Gestión de Despachos", "Optimización de Carga"] },
    { title: "Analítica con IA", price: "$950.000", desc: "Modelos predictivos basados en tus datos históricos.", features: ["Machine Learning", "Predicción de Ventas", "Clasificación de Clientes"] },
    { title: "Dashboards BI", price: "$400.000", desc: "Visualización masiva de datos para toma de decisiones.", features: ["Gráficos Interactivos", "Multi-fuente de Datos", "Alertas Críticas"] },
    { title: "Sistemas de RRHH", price: "$550.000", desc: "Gestión de talento, nómina y desempeño del personal.", features: ["Firma Digital", "Control de Asistencia", "Evaluación 360"] },
    { title: "SaaS de Suscripción", price: "Cotizar", desc: "Desarrollamos tu idea de producto digital escalable.", features: ["Gestión de Pagos", "Multi-tenant", "API First Architecture"] },
    { title: "Control de Calidad", price: "$650.000", desc: "Software para auditorías y seguimiento de normativas ISO.", features: ["Checklist Digital", "Gestión de Incidencias", "Historial de Auditoría"] },
    { title: "Automatización OS", price: "$350.000", desc: "Scripts para automatizar tareas repetitivas de oficina.", features: ["Procesamiento de PDF", "Auto-llenado de Forms", "Sincronización de Archivos"] }
];
---

<BaseLayout seo={seo}>
    <main class="bg-zinc-950 text-white min-h-screen relative overflow-hidden">
        
        <AnimatedBlobs />
        <GrainyGradient />
        <TextureOverlay />
        <CursorFollower />

        <section class="relative z-10 mx-auto px-8 pt-32 pb-24 md:px-12 2xl:max-w-7xl">
            <div class="max-w-6xl">
                <span class="text-lime-400 font-mono text-[10px] uppercase tracking-[0.5em] mb-6 block">
                    Vantta Software Engineering
                </span>
                <Title 
                    title="SOFTWARE MEDIDA" 
                    class="text-6xl md:text-8xl lg:text-[11rem] font-black uppercase tracking-tighter italic leading-[0.75]" 
                />
                <p class="mt-12 text-zinc-500 font-mono text-[11px] uppercase tracking-[0.3em] max-w-2xl leading-relaxed">
                    Desarrollamos lógica de negocio robusta en <span class="text-white">Python</span>. Sistemas escalables que resuelven problemas específicos donde el software comercial falla.
                </p>
            </div>
        </section>

        <section class="relative z-10 border-y border-zinc-900 bg-zinc-950/40 backdrop-blur-md">
            <div class="mx-auto px-8 py-24 md:px-12 2xl:max-w-7xl">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-[1px] bg-zinc-900 border border-zinc-900">
                    {softwareSolutions.map(item => (
                        <div class="bg-zinc-950 p-10 hover:bg-zinc-900 transition-all duration-500 group flex flex-col justify-between">
                            <div>
                                <h3 class="text-2xl font-black uppercase italic mb-1 tracking-tighter leading-none">{item.title}</h3>
                                <p class="text-lime-400 font-mono text-[10px] mb-6 uppercase tracking-widest">Desde {item.price}</p>
                                <p class="text-zinc-500 text-[10px] uppercase font-mono leading-relaxed mb-8 group-hover:text-zinc-400 transition-colors">
                                    {item.desc}
                                </p>
                            </div>
                            <ul class="space-y-3 pt-6 border-t border-zinc-900">
                                {item.features.map(feat => (
                                    <li class="text-[9px] text-zinc-600 font-mono uppercase tracking-widest flex items-center gap-2 group-hover:text-zinc-300">
                                        <span class="w-1 h-1 bg-lime-400"></span> {feat}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="relative z-10 mx-auto px-8 py-32 md:px-12 2xl:max-w-7xl">
            <div class="flex flex-col gap-4">
                
                <div class="group relative overflow-hidden border border-zinc-900 bg-zinc-900/10 backdrop-blur-xl p-12 hover:border-lime-400 transition-all duration-500">
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
                        <div class="max-w-2xl">
                            <span class="text-lime-400 font-mono text-[10px] uppercase tracking-[0.5em] mb-4 block">Core Technology</span>
                            <h2 class="text-5xl md:text-7xl font-black uppercase italic tracking-tighter leading-none">PYTHON ENGINE.</h2>
                            <p class="mt-6 text-zinc-500 font-mono text-[11px] uppercase tracking-[0.2em] leading-relaxed max-w-xl group-hover:text-zinc-300 transition-colors">
                                Utilizamos el lenguaje líder en procesamiento de datos e IA. Construimos backends potentes, scripts de automatización y sistemas de cálculo de alta precisión.
                            </p>
                        </div>
                        <div class="text-zinc-900 font-black text-9xl italic absolute -right-4 -bottom-8 opacity-20 group-hover:text-lime-400 transition-colors">01</div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="group relative overflow-hidden border border-zinc-900 bg-zinc-900/10 backdrop-blur-xl p-12 hover:border-lime-400 transition-all duration-500">
                        <span class="text-lime-400 font-mono text-[10px] uppercase tracking-[0.5em] mb-4 block">Scalability</span>
                        <h2 class="text-4xl md:text-5xl font-black uppercase italic tracking-tighter leading-none mb-6">NATIVO &<br/>NUBE.</h2>
                        <p class="text-zinc-500 font-mono text-[11px] uppercase tracking-[0.2em] leading-relaxed group-hover:text-zinc-300 transition-colors">
                            Sistemas preparados para crecer. Implementamos arquitecturas modulares que permiten añadir funciones sin romper la estructura principal.
                        </p>
                        <div class="text-zinc-900 font-black text-8xl italic absolute -right-2 -bottom-4 opacity-20 group-hover:text-lime-400 transition-colors">02</div>
                    </div>

                    <div class="group relative overflow-hidden border border-zinc-900 bg-zinc-900/10 backdrop-blur-xl p-12 hover:border-lime-400 transition-all duration-500">
                        <span class="text-lime-400 font-mono text-[10px] uppercase tracking-[0.5em] mb-4 block">Data Security</span>
                        <h2 class="text-4xl md:text-5xl font-black uppercase italic tracking-tighter leading-none mb-6">INTEGRIDAD<br/>DE DATOS.</h2>
                        <p class="text-zinc-500 font-mono text-[11px] uppercase tracking-[0.2em] leading-relaxed group-hover:text-zinc-300 transition-colors">
                            Protegemos tu activo más valioso. Encriptación de nivel industrial y protocolos de respaldo automáticos para garantizar la continuidad del negocio.
                        </p>
                        <div class="text-zinc-900 font-black text-8xl italic absolute -right-2 -bottom-4 opacity-20 group-hover:text-lime-400 transition-colors">03</div>
                    </div>
                </div>

            </div>
        </section>

        <section class="relative z-10 bg-white text-black py-24">
            <div class="mx-auto px-8 md:px-12 2xl:max-w-7xl grid grid-cols-1 md:grid-cols-2 gap-20 items-center">
                <div>
                    <h3 class="text-6xl font-black uppercase italic tracking-tighter leading-[0.9] mb-4">SOPORTE<br/>SISTEMAS</h3>
                    <p class="text-zinc-500 uppercase font-mono text-[10px] tracking-widest">Optimización continua y parches de seguridad</p>
                </div>
                <div class="grid grid-cols-1 gap-12">
                    <div class="border-b-2 border-zinc-100 pb-8">
                        <p class="font-mono text-[11px] text-zinc-400 uppercase tracking-widest mb-3 italic">Mantenimiento de Código</p>
                        <div class="flex items-baseline justify-between md:justify-start gap-4">
                            <span class="text-4xl font-black italic uppercase italic">Upgrade</span>
                            <span class="text-2xl font-black text-lime-500 font-mono">DESDE $25.000 <span class="text-xs font-bold uppercase text-zinc-400">/ MES</span></span>
                        </div>
                    </div>
                    <div class="border-b-2 border-zinc-100 pb-8">
                        <p class="font-mono text-[11px] text-zinc-400 uppercase tracking-widest mb-3 italic">Infraestructura Server</p>
                        <div class="flex items-baseline justify-between md:justify-start gap-4">
                            <span class="text-4xl font-black italic uppercase italic">Hosting Cloud</span>
                            <span class="text-2xl font-black text-lime-500 font-mono">DESDE $50.000 <span class="text-xs font-bold uppercase text-zinc-400">/ AÑO</span></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="relative z-10 py-20 bg-zinc-950">
            <Cta />
        </div>

    </main>
</BaseLayout>

<style is:global>
    h1, h2, h3 {
        font-weight: 950 !important;
        letter-spacing: -0.05em;
    }
</style>