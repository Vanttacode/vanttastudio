---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/global/Footer.astro";
import { ServicesBento } from "../components/services/ServicesBento";
---

<BaseLayout title="Servicios | VanttaCode Ecosistema">
  
  <main class="bg-black min-h-screen w-full relative flex flex-col">
    
    <div class="absolute inset-0 z-0 pointer-events-none">
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-[0.07]"></div>
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[60vw] h-[400px] bg-purple-900/20 blur-[150px] rounded-full"></div>
    </div>

    <div class="relative z-10 pt-24 px-6 md:px-10 mb-4">
      <span class="text-[10px] font-bold text-gray-500 uppercase tracking-[0.2em]">
        Ecosistema Vantta
      </span>
      <h1 class="text-white text-2xl font-black uppercase mt-1">
        Selecciona tu <span class="text-transparent bg-clip-text bg-gradient-to-r from-gray-200 to-gray-500">Misi√≥n</span>
      </h1>
    </div>

    <div class="relative z-10 flex-1 px-2 md:px-6 pb-6">
      <ServicesBento client:visible />
    </div>

  </main>

  <Footer />

</BaseLayout>