---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/global/Footer.astro";

// Importamos los componentes modulares
import Hero from "../components/workover/Hero.astro";
import Problem from "../components/workover/Problem.astro";
import TechStack from "../components/workover/TechStack.astro";
import Timeline from "../components/workover/Timeline.astro";
import FAQ from "../components/workover/FAQ.astro";

// Componentes Interactivos (React)
import { PricingInteractive } from "../components/workover/PricingInteractive.tsx";
